<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.container {
			width: 100%;
		}
		
		.content {
			width: 400px;
			margin: 0 auto;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.content}">
		<h2>Hive Web(请使用线上hadoop账号登陆)</h2>
		<g:SimplePanel ui:field="message"></g:SimplePanel>
		<table>
			<tr>
				<td>用户名: </td>
				<td>
					<g:TextBox ui:field="username"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>密码: </td>
				<td>
					<g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					<g:Button ui:field="submit_button" text="login"></g:Button>
					<g:Button ui:field="reset_button" text="reset"></g:Button>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 