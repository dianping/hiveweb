<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style>
		.cellTable {
			border-bottom: 2px solid #ccc;
			text-align: left;
			margin-bottom: 5px;
		}
		.progressTextArea {
			color: green;
			background-color: blanchedalmond;
			width: 520px;
			height: 160px;
		}
	</ui:style>
	<g:VerticalPanel spacing='5'>
		<g:HorizontalPanel spacing="10">
			<g:FlowPanel>
				<g:HorizontalPanel>
					<g:HTMLPanel>
						Databases:
					</g:HTMLPanel>
					<g:ListBox ui:field="dbListBox" visibleItemCount="1" />
				</g:HorizontalPanel>
				<g:HTMLPanel>
					Please write your hive query:
				</g:HTMLPanel>
				<g:TextArea ui:field="hqlTextArea" visibleLines="5"/>
				<g:HorizontalPanel spacing='5'>
					<g:CheckBox ui:field="isStoreFile" text="Store To File" />
					<g:Button ui:field="submitBut" text="submit" width="100px"/>
					<g:Button ui:field="submitQPBut" text="Query Plan" width="120px"/>
				</g:HorizontalPanel>
			</g:FlowPanel>
			<g:TextArea ui:field="progressTextArea" styleName="{style.progressTextArea}" />
		</g:HorizontalPanel>
		<g:HTMLPanel>
			<table cellspacing='0' cellpadding='0' style='width:100%;'>
				<tr>
					<td valign='top'>
						<c:CellTable addStyleNames='{style.cellTable}'
							pageSize='15' ui:field='cellTable' />
					</td>
				</tr>
				<tr>
					<td align='center'>
						<c:SimplePager ui:field='pager' />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder>