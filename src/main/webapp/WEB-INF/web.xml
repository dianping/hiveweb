<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:applicationContext.xml
        </param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>springGwtRemoteServiceServlet</servlet-name>
		<servlet-class>org.spring4gwt.server.SpringGwtRemoteServiceServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>MyFileServlet</servlet-name>
		<servlet-class>com.dianping.cosmos.hive.server.FileDownload</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>MyLogoutServlet</servlet-name>
		<servlet-class>com.dianping.cosmos.hive.server.Logout</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>springGwtRemoteServiceServlet</servlet-name>
		<url-pattern>/hivewebrowser/springGwtServices/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>MyFileServlet</servlet-name>
		<url-pattern>/hivewebrowser/myfiledownload/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>MyLogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>home.html</welcome-file>
	</welcome-file-list>

</web-app>
